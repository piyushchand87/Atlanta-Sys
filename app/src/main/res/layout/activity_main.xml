<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="5dp"
    tools:context=".RETROFIT.MainActivity">
<EditText
    android:id="@+id/EditText_SearUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="5dp"
    android:hint="Enter User Name"
    android:textColorHint="@color/design_default_color_primary_dark"
    android:drawableLeft="@drawable/person_search_24"
    android:drawablePadding="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#fff"
        android:layout_below="@+id/EditText_SearUser"
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        tools:listitem="@layout/each_roe"
        android:layout_height="match_parent"/>

</RelativeLayout>